<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.webcraft.doml"
    version="1.0.0">

    <name>System API</name>

    <engines>
        <engine name="cordova" version=">=3.0.0" />
    </engines>

    <description>System API</description>
    <author>Webcraft</author>
    <keywords></keywords>

    <license>CC</license>

    <js-module src="www/doml.js" name="doml">
        <clobbers target="window.doml" />
    </js-module>

    <!-- android -->
    <platform name="android">

        <config-file target="res/xml/config.xml" parent="/*">
          <feature name="doml" >
            <param name="android-package" value="com.webcraft.doml.doml"/>  
          </feature>
        </config-file>

        <source-file src="src/android/doml.java" target-dir="src/com/webcraft/doml" />

    </platform>
</plugin>